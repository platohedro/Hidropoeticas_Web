---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import WaterBackground from '../components/WaterBackground';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hidropoeticas - Un viaje artÃ­stico por las aguas de Colombia" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts - Oswald & Roboto Condensed -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=Roboto+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#051d25] text-[#4fe9ab] font-sans relative">
		<WaterBackground client:load />
		<div class="relative z-10">
			<slot />
		</div>
		
		<!-- Water Ripples Effect -->
		<script src="/ripples-init.js" is:inline></script>
	</body>
</html>

<style>
	@import '../styles/global.css';
	
	/* Enhanced water-like styling */
	body {
		background: linear-gradient(135deg, #2788ac 0%, #09232b 50%, #000000 100%);
		background-size: 400% 400%;
		animation: waterFlow 15s ease-in-out infinite;
		position: relative;
		min-height: 100vh;
	}
	
	@keyframes waterFlow {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
	
	/* Ensure content is above the ripples */
	.relative.z-10 {
		position: relative;
		z-index: 10;
	}
	
	/* Add subtle water texture */
	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			radial-gradient(circle at 20% 80%, rgba(175, 208, 216, 0.3) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(152, 186, 198, 0.3) 0%, transparent 50%),
			radial-gradient(circle at 40% 40%, rgba(27, 120, 149, 0.1) 0%, transparent 50%);
		pointer-events: none;
		z-index: 1;
		animation: waterTexture 20s ease-in-out infinite;
	}
	
	@keyframes waterTexture {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 0.6; }
	}
	
	/* Hover effects for interactive elements */
	.group:hover {
		transform: translateY(-2px);
		transition: all 0.3s ease;
	}
	
	/* Water-like hover effect for cards */
	.group:hover::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
			rgba(27, 120, 149, 0.1) 0%, 
			transparent 50%);
		pointer-events: none;
		opacity: 0;
		animation: rippleHover 0.2s ease-out;
	}
	
	@keyframes rippleHover {
		0% { opacity: 0; transform: scale(0); }
		50% { opacity: 1; }
		100% { opacity: 0; transform: scale(1); }
	}
</style>

