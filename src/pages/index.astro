---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hidropoeticas - Inicio">
  <main class="min-h-screen flex flex-col overflow-hidden">
    <!-- Header -->
    <header class="pt-16 pb-8 text-center relative z-10">
      <h1 class="text-6xl md:text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600 mb-4">
        HIDROPOETICAS
      </h1>
      <p class="text-xl text-cyan-200">Un viaje artístico por las aguas de Colombia</p>
    </header>

    <!-- Main Content -->
    <section class="flex-1 flex items-center justify-center px-4 py-12 relative">
      <!-- Background water effect -->
      <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="water-bg"></div>
      </div>
      
      <!-- River Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 max-w-7xl w-full px-4 relative z-10">
        <!-- Rio De Oro -->
        <a href="/rio-de-oro" class="river-card group">
          <div class="river-card-inner">
            <div class="river-card-front">
              <div class="river-image">
                <img src="/rio-de-oro.jpg" alt="Rio De Oro" class="w-full h-full object-cover">
              </div>
              <div class="river-overlay">
                <h2 class="river-title">Rio De Oro</h2>
                <p class="river-location">Cesar, Colombia</p>
              </div>
            </div>
            <div class="river-card-back">
              <p class="river-description">Descubre la riqueza natural y cultural del encanto del Sur del Cesar</p>
              <span class="river-more">Ver más →</span>
            </div>
          </div>
        </a>

        <!-- Rio Quilichao -->
        <a href="/rio-quilichao" class="river-card group">
          <div class="river-card-inner">
            <div class="river-card-front">
              <div class="river-image">
                <img src="/rio-quilichao.jpg" alt="Rio Quilichao" class="w-full h-full object-cover">
              </div>
              <div class="river-overlay">
                <h2 class="river-title">Rio Quilichao</h2>
                <p class="river-location">Cauca, Colombia</p>
              </div>
            </div>
            <div class="river-card-back">
              <p class="river-description">Explora las aguas que nacen en la Reserva Natural de Munchique</p>
              <span class="river-more">Ver más →</span>
            </div>
          </div>
        </a>

        <!-- Quebrada Santaelena -->
        <a href="/quebrada-santaelena" class="river-card group">
          <div class="river-card-inner">
            <div class="river-card-front">
              <div class="river-image">
                <img src="/quebrada-santaelena.jpg" alt="Quebrada Santaelena" class="w-full h-full object-cover">
              </div>
              <div class="river-overlay">
                <h2 class="river-title">Quebrada Santaelena</h2>
                <p class="river-location">Medellín, Antioquia</p>
              </div>
            </div>
            <div class="river-card-back">
              <p class="river-description">Conoce la cuna y nodriza histórica de la ciudad de Medellín</p>
              <span class="river-more">Ver más →</span>
            </div>
          </div>
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 text-center relative z-10">
      <p class="text-cyan-200 opacity-80">© 2025 Hidropoeticas - Explorando las aguas de Colombia</p>
    </footer>
  </main>
</Layout>

<style>
  /* Water background animation */
  @keyframes waterFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .water-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 50%, #051217 100%);
    background-size: 400% 400%;
    animation: waterFlow 20s ease infinite;
  }

  /* River Card Styles */
  .river-card {
    perspective: 1000px;
    height: 400px;
    display: block;
    position: relative;
    transition: transform 0.6s ease;
  }

  .river-card:hover {
    transform: translateY(-10px);
  }

  .river-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }

  .river-card:hover .river-card-inner {
    transform: rotateY(180deg);
  }

  .river-card-front,
  .river-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }

  .river-card-front {
    background-color: #0a2e38;
    color: white;
  }

  .river-card-back {
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 100%);
    color: white;
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    border: 1px solid rgba(79, 233, 171, 0.2);
  }

  .river-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .river-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
  }

  .river-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .river-location {
    font-size: 1rem;
    opacity: 0.9;
    font-weight: 300;
  }

  .river-description {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .river-more {
    display: inline-block;
    color: #4fe9ab;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .river-card:hover .river-more {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .river-card {
      height: 350px;
      margin-bottom: 2rem;
    }
    
    .river-title {
      font-size: 1.5rem;
    }
    
    .river-card-back {
      padding: 1.5rem;
    }
    
    .river-description {
      font-size: 1rem;
    }
  }
</style>

