---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hidropoeticas - Inicio">
  <main class="min-h-screen flex flex-col overflow-hidden">
    <!-- Header -->
   

    <!-- Main Content - Colombia Hydrographic Map -->
    <section class="flex-1 flex items-center justify-center px-2 md:px-4 py-6 md:py-12 relative">
      <!-- Background water effect removido para mejor visibilidad del mapa -->
      
      
      <div class="relative w-full max-w-6xl mx-auto z-10">
        <!-- Colombia Map Container -->
        <div class="relative rounded-3xl p-8">
          <!-- Colombia Map SVG -->
          <svg viewBox="0 0 1000 700" class="w-full h-auto opacity-90 min-h-[400px] md:min-h-[500px]">
            <!-- Gradient definitions -->
            <defs>
              <linearGradient id="mapGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:0.3" />
                <stop offset="50%" style="stop-color:#0891b2;stop-opacity:0.4" />
                <stop offset="100%" style="stop-color:#0f766e;stop-opacity:0.3" />
              </linearGradient>
              
              <!-- Enhanced shadow filter for video circles -->
              <filter id="videoShadow" x="-200%" y="-200%" width="500%" height="500%">
                <feDropShadow dx="0" dy="12" stdDeviation="20" flood-color="#000" flood-opacity="0.6"/>
                <feDropShadow dx="0" dy="8" stdDeviation="15" flood-color="#4fe9ab" flood-opacity="0.3"/>
                <feDropShadow dx="0" dy="4" stdDeviation="8" flood-color="#0ea5e9" flood-opacity="0.2"/>
              </filter>
              
              <!-- Intense hover shadow filter -->
              <filter id="videoShadowHover" x="-300%" y="-300%" width="700%" height="700%">
                <feDropShadow dx="0" dy="20" stdDeviation="35" flood-color="#000" flood-opacity="0.8"/>
                <feDropShadow dx="0" dy="15" stdDeviation="25" flood-color="#4fe9ab" flood-opacity="0.5"/>
                <feDropShadow dx="0" dy="10" stdDeviation="18" flood-color="#0ea5e9" flood-opacity="0.4"/>
                <feDropShadow dx="0" dy="5" stdDeviation="12" flood-color="#06b6d4" flood-opacity="0.3"/>
              </filter>
            </defs>
          
            
            
          
   
            
            <!-- Rio Quilichao - Southwest (Cauca) -->
            <g class="river-point group cursor-pointer" data-river="quilichao">
              <circle cx="300" cy="430" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="300" cy="430" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="255" y="385" width="90" height="90" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/rio-quilichao.jpg" alt="Rio Quilichao" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Hover Label -->
              <foreignObject x="370" y="400" width="200" height="100" class="pointer-events-none">
                <div class="bg-gradient-to-r from-slate-900/95 to-slate-800/95 text-cyan-300 px-3 py-2 md:px-4 md:py-3 rounded-lg md:rounded-xl text-sm md:text-base font-semibold shadow-2xl border border-cyan-500/50 backdrop-blur-md opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-[-30px] translate-y-2 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:scale-105">
                  <div class="hidden md:block">Rio Quilichao</div>
                  <div class="md:hidden">Quilichao</div>
                  <div class="text-xs text-cyan-400 font-normal mt-1">Cauca</div>
                </div>
              </foreignObject>
              
              <!-- Click area -->
              <circle cx="300" cy="430" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/rio-quilichao'"/>
            </g>
            
            <!-- Rio de Oro - Northeast (Norte de Santander/Cesar) - Mobile Optimized -->
            <g class="river-point group cursor-pointer" data-river="oro">
              <circle cx="400" cy="110" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="400" cy="110" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="355" y="65" width="90" height="90" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/rio-de-oro.jpg" alt="Rio de Oro" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Hover Label -->
              <foreignObject x="470" y="80" width="220" height="100" class="pointer-events-none">
                <div class="bg-gradient-to-r from-slate-900/95 to-slate-800/95 text-cyan-300 px-3 py-2 md:px-4 md:py-3 rounded-lg md:rounded-xl text-sm md:text-base font-semibold shadow-2xl border border-cyan-500/50 backdrop-blur-md opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-[-30px] translate-y-2 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:scale-105">
                  <div class="hidden md:block">Rio de Oro</div>
                  <div class="md:hidden">Oro</div>
                  <div class="text-xs text-cyan-400 font-normal mt-1 hidden md:block">Norte de Santander</div>
                  <div class="text-xs text-cyan-400 font-normal mt-1 md:hidden">N. Santander</div>
                </div>
              </foreignObject>
              
              <!-- Click area - Larger for mobile -->
              <circle cx="400" cy="110" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/rio-de-oro'"/>
            </g>
            
            <!-- Quebrada Santa Elena - Northwest (Medellín, Antioquia) - Mobile Optimized -->
            <g class="river-point group cursor-pointer" data-river="santaelena">
              <circle cx="280" cy="300" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="280" cy="300" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="235" y="255" width="90" height="90" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/quebrada-santaelena.jpg" alt="Quebrada Santa Elena" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Hover Label -->
              <foreignObject x="350" y="270" width="250" height="100" class="pointer-events-none">
                <div class="bg-gradient-to-r from-slate-900/95 to-slate-800/95 text-cyan-300 px-3 py-2 md:px-4 md:py-3 rounded-lg md:rounded-xl text-sm md:text-base font-semibold shadow-2xl border border-cyan-500/50 backdrop-blur-md opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-[-30px] translate-y-2 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:scale-105">
                  <div class="hidden md:block">Quebrada Santa Elena</div>
                  <div class="md:hidden">Santa Elena</div>
                  <div class="text-xs text-cyan-400 font-normal mt-1 hidden md:block">Medellín, Antioquia</div>
                  <div class="text-xs text-cyan-400 font-normal mt-1 md:hidden">Antioquia</div>
                </div>
              </foreignObject>
              
              <!-- Click area - Larger for mobile -->
              <circle cx="280" cy="300" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/quebrada-santaelena'"/>
            </g>

          </svg>
          
        </div>
      </div>
    </section>

    <!-- Footer -->
  
  </main>
</Layout>

<style>
  /* Water background animation */
  @keyframes waterFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .water-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 50%, #051217 100%);
    background-size: 400% 400%;
    animation: waterFlow 20s ease infinite;
  }

  /* River Card Styles */
  .river-card {
    perspective: 1000px;
    height: 400px;
    display: block;
    position: relative;
    transition: transform 0.6s ease;
  }

  .river-card:hover {
    transform: translateY(-10px);
  }

  .river-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }

  .river-card:hover .river-card-inner {
    transform: rotateY(180deg);
  }

  .river-card-front,
  .river-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }

  .river-card-front {
    background-color: #0a2e38;
    color: white;
  }

  .river-card-back {
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 100%);
    color: white;
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    border: 1px solid rgba(79, 233, 171, 0.2);
  }

  .river-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .river-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
  }

  .river-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .river-location {
    font-size: 1rem;
    opacity: 0.9;
    font-weight: 300;
  }

  .river-description {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .river-more {
    display: inline-block;
    color: #4fe9ab;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .river-card:hover .river-more {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .river-card {
      height: 350px;
      margin-bottom: 2rem;
    }
    
    .river-title {
      font-size: 1.5rem;
    }
    
    .river-card-back {
      padding: 1.5rem;
    }
    
    .river-description {
      font-size: 1rem;
    }
  }
</style>

