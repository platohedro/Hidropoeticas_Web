---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hidropoeticas - Inicio">
  <main class="min-h-screen flex flex-col overflow-hidden">
    <!-- Header -->
    <header class="pt-8 md:pt-16 pb-4 md:pb-8 text-center relative z-10 px-4">
     </header>

    <!-- Main Content - Colombia Hydrographic Map -->
    <section class="flex-1 flex items-center justify-center px-2 md:px-4 py-6 md:py-12 relative">
      <!-- Background water effect removido para mejor visibilidad del mapa -->
      <div class="absolute inset-0 overflow-hidden opacity-0">
        <div class="water-bg"></div>
      </div>
      
      <div class="relative w-full max-w-6xl mx-auto z-10">
        <!-- Colombia Map Container -->
        <div class="relative rounded-3xl p-8">
          <!-- Colombia Map SVG -->
          <svg viewBox="0 0 1000 700" class="w-full h-auto opacity-90 min-h-[400px] md:min-h-[500px]">
            <!-- Gradient definitions -->
            <defs>
              <linearGradient id="mapGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:0.3" />
                <stop offset="50%" style="stop-color:#0891b2;stop-opacity:0.4" />
                <stop offset="100%" style="stop-color:#0f766e;stop-opacity:0.3" />
              </linearGradient>
              
              <!-- Enhanced shadow filter for video circles -->
              <filter id="videoShadow" x="-200%" y="-200%" width="500%" height="500%">
                <feDropShadow dx="0" dy="12" stdDeviation="20" flood-color="#000" flood-opacity="0.6"/>
                <feDropShadow dx="0" dy="8" stdDeviation="15" flood-color="#4fe9ab" flood-opacity="0.3"/>
                <feDropShadow dx="0" dy="4" stdDeviation="8" flood-color="#0ea5e9" flood-opacity="0.2"/>
              </filter>
              
              <!-- Intense hover shadow filter -->
              <filter id="videoShadowHover" x="-300%" y="-300%" width="700%" height="700%">
                <feDropShadow dx="0" dy="20" stdDeviation="35" flood-color="#000" flood-opacity="0.8"/>
                <feDropShadow dx="0" dy="15" stdDeviation="25" flood-color="#4fe9ab" flood-opacity="0.5"/>
                <feDropShadow dx="0" dy="10" stdDeviation="18" flood-color="#0ea5e9" flood-opacity="0.4"/>
                <feDropShadow dx="0" dy="5" stdDeviation="12" flood-color="#06b6d4" flood-opacity="0.3"/>
              </filter>
            </defs>
            
            <!-- Colombia outline - More recognizable shape -->
            <path d="M 150 150 
                     L 200 130 L 280 125 L 360 130 L 450 135 L 550 140 L 650 145 L 720 160 L 780 185 L 820 220 L 850 270 L 870 330 L 860 390 L 840 450 L 810 500 L 770 540 L 720 575 L 660 600 L 590 620 L 520 625 L 450 620 L 380 610 L 320 590 L 270 560 L 230 520 L 200 470 L 180 410 L 165 350 L 155 290 L 150 230 Z" 
                  fill="rgba(14, 165, 233, 0.15)" 
                  stroke="#4fe9ab" 
                  stroke-width="3" 
                  class="drop-shadow-2xl"/>
            
            <!-- Colombia detailed border for visibility -->
            <path d="M 150 150 
                     L 200 130 L 280 125 L 360 130 L 450 135 L 550 140 L 650 145 L 720 160 L 780 185 L 820 220 L 850 270 L 870 330 L 860 390 L 840 450 L 810 500 L 770 540 L 720 575 L 660 600 L 590 620 L 520 625 L 450 620 L 380 610 L 320 590 L 270 560 L 230 520 L 200 470 L 180 410 L 165 350 L 155 290 L 150 230 Z" 
                  fill="none" 
                  stroke="#06b6d4" 
                  stroke-width="2" 
                  stroke-dasharray="5,3"
                  opacity="0.6"/>
            
            <!-- Colombian River System as Background -->
            <!-- Rio Magdalena - Main river flowing north (most visible) -->
            <path d="M 440 600 Q 470 550 500 500 Q 520 450 540 400 Q 560 350 580 300 Q 600 250 620 200 Q 640 150 660 120" 
                  fill="none" 
                  stroke="#4fe9ab" 
                  stroke-width="8" 
                  stroke-opacity="0.4" 
                  class="drop-shadow-lg"/>
            
            <!-- Rio Cauca - Western tributary (second most visible) -->
            <path d="M 320 580 Q 340 530 360 480 Q 380 430 400 380 Q 420 330 440 280 Q 460 230 480 180" 
                  fill="none" 
                  stroke="#06b6d4" 
                  stroke-width="6" 
                  stroke-opacity="0.3"/>
            
            <!-- Rio Atrato - Pacific coast -->
            <path d="M 260 350 Q 280 380 300 420 Q 320 460 340 500 Q 360 540 380 580" 
                  fill="none" 
                  stroke="#0ea5e9" 
                  stroke-width="4" 
                  stroke-opacity="0.25"/>
            
            <!-- Rio Orinoco tributaries - Eastern region -->
            <path d="M 620 300 Q 670 320 720 340 Q 770 360 820 380" 
                  fill="none" 
                  stroke="#0891b2" 
                  stroke-width="3" 
                  stroke-opacity="0.2"/>
            <path d="M 670 250 Q 720 270 770 290 Q 820 310 870 330" 
                  fill="none" 
                  stroke="#0891b2" 
                  stroke-width="3" 
                  stroke-opacity="0.2"/>
            
            <!-- Rio Amazonas tributaries - Southern region -->
            <path d="M 520 550 Q 570 570 620 590 Q 670 610 720 630" 
                  fill="none" 
                  stroke="#0f766e" 
                  stroke-width="3" 
                  stroke-opacity="0.2"/>
            <path d="M 470 580 Q 520 600 570 620 Q 620 640 670 660" 
                  fill="none" 
                  stroke="#0f766e" 
                  stroke-width="3" 
                  stroke-opacity="0.2"/>
            
            <!-- Caribbean coast rivers -->
            <path d="M 520 140 Q 550 160 580 180 Q 610 200 640 220" 
                  fill="none" 
                  stroke="#22d3ee" 
                  stroke-width="2" 
                  stroke-opacity="0.15"/>
            
            <!-- Pacific coast rivers -->
            <path d="M 240 400 Q 220 420 200 440 Q 180 460 160 480" 
                  fill="none" 
                  stroke="#67e8f9" 
                  stroke-width="2" 
                  stroke-opacity="0.15"/>
            <path d="M 300 500 Q 280 520 260 540 Q 240 560 220 580" 
                  fill="none" 
                  stroke="#67e8f9" 
                  stroke-width="2" 
                  stroke-opacity="0.15"/>
            
            <!-- Rio Quilichao - Southwest (Cauca) - Mobile Optimized -->
            <g class="river-point group cursor-pointer" data-river="quilichao">
              <circle cx="300" cy="430" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="300" cy="430" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="260" y="390" width="80" height="80" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500 md:x-265 md:y-395 md:width-70 md:height-70">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/rio-quilichao.jpg" alt="Rio Quilichao" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Click area - Larger for mobile -->
              <circle cx="300" cy="430" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/rio-quilichao'"/>
            </g>
            
            <!-- Rio de Oro - Northeast (Norte de Santander/Cesar) - Mobile Optimized -->
            <g class="river-point group cursor-pointer" data-river="oro">
              <circle cx="600" cy="180" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="600" cy="180" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="560" y="140" width="80" height="80" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500 md:x-565 md:y-145 md:width-70 md:height-70">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/rio-de-oro.jpg" alt="Rio de Oro" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Click area - Larger for mobile -->
              <circle cx="600" cy="180" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/rio-de-oro'"/>
            </g>
            
            <!-- Quebrada Santa Elena - Northwest (Medellín, Antioquia) - Mobile Optimized -->
            <g class="river-point group cursor-pointer" data-river="santaelena">
              <circle cx="280" cy="300" r="60" 
                      fill="rgba(79, 233, 171, 0.1)" 
                      stroke="rgba(79, 233, 171, 0.5)" 
                      stroke-width="2" 
                      class="transition-all duration-500 group-hover:r-70 group-hover:fill-opacity-20 md:r-50 md:group-hover:r-60"/>
              
              <!-- Video Circle -->
              <circle cx="280" cy="300" r="45" 
                      fill="rgba(0, 0, 0, 0.3)" 
                      filter="url(#videoShadow)"
                      class="transition-all duration-500 group-hover:r-55 group-hover:[filter:url(#videoShadowHover)] md:r-35 md:group-hover:r-45"/>
              
              <foreignObject x="240" y="260" width="80" height="80" class="pointer-events-none group-hover:opacity-100 opacity-75 transition-all duration-500 md:x-245 md:y-265 md:width-70 md:height-70">
                <div class="w-full h-full rounded-full overflow-hidden border-2 border-cyan-400/50 group-hover:border-cyan-300 group-hover:border-4 transition-all duration-500 shadow-2xl group-hover:shadow-[0_0_50px_rgba(79,233,171,0.6)]">
                  <img src="/quebrada-santaelena.jpg" alt="Quebrada Santa Elena" class="w-full h-full object-cover group-hover:scale-115 transition-transform duration-700">
                </div>
              </foreignObject>
              
              <!-- Click area - Larger for mobile -->
              <circle cx="280" cy="300" r="60" 
                      fill="transparent" 
                      class="cursor-pointer md:r-50"
                      onclick="window.location.href='/quebrada-santaelena'"/>
            </g>
          </svg>
          
          <!-- Floating Labels with mobile optimization -->
          <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
            <!-- Rio Quilichao Label -->
            <div class="absolute left-[20%] top-[68%] md:left-[25%] md:top-[65%] transition-all duration-300 hover:scale-105">
              <div class="bg-gradient-to-r from-slate-900/90 to-slate-800/90 text-cyan-300 px-2 py-1 md:px-4 md:py-2 rounded-lg md:rounded-xl text-xs md:text-sm font-semibold shadow-2xl border border-cyan-500/30 backdrop-blur-sm">
                <div class="hidden md:block">Rio Quilichao</div>
                <div class="md:hidden">Quilichao</div>
                <div class="text-xs text-cyan-400 font-normal">Cauca</div>
              </div>
            </div>
            
            <!-- Rio de Oro Label -->
            <div class="absolute left-[55%] top-[15%] md:left-[65%] md:top-[20%] transition-all duration-300 hover:scale-105">
              <div class="bg-gradient-to-r from-slate-900/90 to-slate-800/90 text-cyan-300 px-2 py-1 md:px-4 md:py-2 rounded-lg md:rounded-xl text-xs md:text-sm font-semibold shadow-2xl border border-cyan-500/30 backdrop-blur-sm">
                <div class="hidden md:block">Rio de Oro</div>
                <div class="md:hidden">Oro</div>
                <div class="text-xs text-cyan-400 font-normal hidden md:block">Norte de Santander</div>
                <div class="text-xs text-cyan-400 font-normal md:hidden">N. Santander</div>
              </div>
            </div>
            
            <!-- Quebrada Santa Elena Label -->
            <div class="absolute left-[12%] top-[35%] md:left-[18%] md:top-[40%] transition-all duration-300 hover:scale-105">
              <div class="bg-gradient-to-r from-slate-900/90 to-slate-800/90 text-cyan-300 px-2 py-1 md:px-4 md:py-2 rounded-lg md:rounded-xl text-xs md:text-sm font-semibold shadow-2xl border border-cyan-500/30 backdrop-blur-sm">
                <div class="hidden md:block">Quebrada Santa Elena</div>
                <div class="md:hidden">Santa Elena</div>
                <div class="text-xs text-cyan-400 font-normal hidden md:block">Medellín, Antioquia</div>
                <div class="text-xs text-cyan-400 font-normal md:hidden">Antioquia</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 text-center relative z-10">
      <p class="text-cyan-200 opacity-80">© 2025 Hidropoeticas - Explorando las aguas de Colombia</p>
    </footer>
  </main>
</Layout>

<style>
  /* Water background animation */
  @keyframes waterFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .water-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 50%, #051217 100%);
    background-size: 400% 400%;
    animation: waterFlow 20s ease infinite;
  }

  /* River Card Styles */
  .river-card {
    perspective: 1000px;
    height: 400px;
    display: block;
    position: relative;
    transition: transform 0.6s ease;
  }

  .river-card:hover {
    transform: translateY(-10px);
  }

  .river-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }

  .river-card:hover .river-card-inner {
    transform: rotateY(180deg);
  }

  .river-card-front,
  .river-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }

  .river-card-front {
    background-color: #0a2e38;
    color: white;
  }

  .river-card-back {
    background: linear-gradient(135deg, #0a2e38 0%, #0a1a1f 100%);
    color: white;
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    border: 1px solid rgba(79, 233, 171, 0.2);
  }

  .river-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .river-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
  }

  .river-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .river-location {
    font-size: 1rem;
    opacity: 0.9;
    font-weight: 300;
  }

  .river-description {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .river-more {
    display: inline-block;
    color: #4fe9ab;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .river-card:hover .river-more {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .river-card {
      height: 350px;
      margin-bottom: 2rem;
    }
    
    .river-title {
      font-size: 1.5rem;
    }
    
    .river-card-back {
      padding: 1.5rem;
    }
    
    .river-description {
      font-size: 1rem;
    }
  }
</style>

