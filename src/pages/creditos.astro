                        <div class="space-y-5">
                            {logoGroups.map((group) => (
                                <article class="space-y-6 bg-white/5 p-6 rounded-2xl border border-white/10">
                                    <div class="space-y-2">
                                        <p class="text-xs font-semibold uppercase tracking-[0.35em] text-cyan-200">{group.title}</p>
                                        <p class="text-sm text-white/70">{group.description}</p>
