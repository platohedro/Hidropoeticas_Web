		}

		.prose {
			color: inherit;
		}

		.prose p, .prose li {
			margin-bottom: 1em;
		}

		.prose a {
			color: #7dd3fc;
			text-decoration: none;
			transition: color 0.2s;
		}

		.prose a:hover {
			color: #38bdf8;
			text-decoration: underline;
		}

		/* Efecto de ondas en el fondo */
		.wave-bg {
			position: fixed;
			bottom: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
		}
