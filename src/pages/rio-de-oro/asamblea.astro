<Layout title="Rio de Oro - Asamblea del Agua">
	<main class="min-h-screen">
		<header class="py-4 md:py-8 px-4 md:px-8 ml-0 lg:ml-[280px]">
			<nav class="mb-4 md:mb-8 flex gap-4 flex-wrap">
				<a
					href="/"
					class="inline-flex items-center gap-2 bg-gradient-to-r from-cyan-600/20 to-blue-600/20 hover:from-cyan-500/30 hover:to-blue-500/30 text-cyan-200 hover:text-white px-4 py-2 rounded-lg border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-300 text-sm md:text-base font-medium backdrop-blur-md shadow-lg hover:shadow-cyan-500/20"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
					</svg>
					Inicio
				</a>
				<a
					href="/rio-de-oro"
					class="inline-flex items-center gap-2 bg-gradient-to-r from-emerald-600/20 to-blue-600/20 hover:from-emerald-500/30 hover:to-blue-500/30 text-emerald-100 hover:text-white px-4 py-2 rounded-lg border border-emerald-500/30 hover:border-emerald-400/50 transition-all duration-300 text-sm md:text-base font-medium backdrop-blur-md shadow-lg hover:shadow-emerald-500/20"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
					</svg>
					Río de Oro
				</a>
			</nav>
			<div class="text-center mt-6">
				<h1 class="text-4xl md:text-5xl font-bold text-white mb-2">
					Asamblea del Agua
				</h1>
				<p
					class="text-sm uppercase tracking-[0.3em] text-cyan-200/80 mb-2"
				>
					Alienígenas en Santurbán
				</p>
				<p class="text-lg text-white/80"></p>
			</div>
		</header>

		<VerticalRiverNav
			client:load
			sections={[
				{ id: "juntxs", text: "Juntxs" },
				{ id: "asamblea", text: "Asamblea del Agua" },
				// { id: 'acciones', text: 'Acciones performáticas' },
