	<style>
		@import url("/src/styles/river-flow.css");

		.glass-container {
			position: relative;
			overflow: hidden;
		}

		/* Mejoras adicionales para móvil */
		@media (max-width: 768px) {
			.glass-container {
				height: 200px;
			}

			section {
				min-height: auto;
				padding: 2rem 0;
			}

			h1 {
				font-size: 2rem;
			}

			h2 {
				font-size: 1.75rem;
				margin-bottom: 1.5rem;
			}
		}
	</style>
</Layout>
