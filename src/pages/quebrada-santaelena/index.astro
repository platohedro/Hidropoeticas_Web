---
import Layout from '../../layouts/Layout.astro';
import VerticalRiverNav from '../../components/VerticalRiverNav.jsx';
import WaterSectionTransition from '../../components/WaterSectionTransition.jsx';
---

<Layout title="Quebrada Santa Helena - Hidropoeticas">
	<main class="min-h-screen">
		<!-- Header -->
		<header class="py-4 md:py-8 px-4 md:px-8 ml-0 lg:ml-[280px]">
			<nav class="mb-4 md:mb-8">
				<a href="/" class="inline-flex items-center gap-2 bg-gradient-to-r from-cyan-600/20 to-blue-600/20 hover:from-cyan-500/30 hover:to-blue-500/30 text-cyan-200 hover:text-white px-4 py-2 rounded-lg border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-300 text-sm md:text-base font-medium backdrop-blur-md shadow-lg hover:shadow-cyan-500/20">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
					</svg>
					Volver al inicio
				</a>
			</nav>
			<div class="text-center">
				<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 drop-shadow-lg">Quebrada Santa Elena</h1>
				<p class="text-lg md:text-xl text-white opacity-90 px-4">La quebrada que desciende desde el páramo hasta el corazón de Medellín</p>
			</div>
		</header>

		<!-- River Navigation -->
		<VerticalRiverNav 
			client:load
			sections={[
				{ id: 'santa-1', text: 'Santa 1' },
				{ id: 'santa-2', text: 'Santa 2' },
				{ id: 'santa-3', text: 'santa 3' },
				{ id: 'santa-4', text: 'santa 4' }
			]}
		/>

		<!-- Content Sections -->
		<div class="flex flex-col lg:flex-row">
			<!-- Main Content -->
			<div class="flex-1 px-4 md:px-8">
				<section id="santa-1" class="min-h-screen flex items-center justify-center py-16">
					<div class="max-w-6xl mx-auto px-4">
						<h2 class="text-5xl font-bold text-white mb-12 text-center drop-shadow-[0_4px_8px_rgba(0,0,0,0.3)]">
							Santa 1 
						</h2>
						
						<div class="grid gap-8 mb-12">
							<div class="bg-gradient-to-br from-[#1b7895]/90 to-[#2a97b8]/90 rounded-xl p-1 cursor-pointer hover:scale-105 transition-transform duration-300" onclick="window.location.href='/quebrada-santaelena/introduccion'">
								<div class="bg-gradient-to-b from-white/10 to-white/5 rounded-lg backdrop-blur-md p-8 border border-white/20 hover:border-white/40 transition-all duration-500">
									<div class="flex flex-col md:flex-row gap-8">
										<div class="w-full md:w-1/2">
											<div class="h-64 rounded-lg overflow-hidden glass-container relative">
												<div class="absolute inset-0 bg-gradient-to-t from-[#1b7895]/20 to-transparent"></div>
												<img src="/quebrada-santaelena-preview.jpg" alt="Quebrada Santa Elena" class="w-full h-full object-cover hover:scale-110 transition-transform duration-700" />
											</div>
										</div>
										<div class="w-full md:w-1/2 flex flex-col justify-between">
											<div class="space-y-6">
												<h3 class="text-2xl font-semibold text-white drop-shadow-[0_2px_4px_rgba(0,0,0,0.3)]">Corriente Andina</h3>
												<p class="text-lg text-white/90 leading-relaxed">
													La Quebrada Santa Elena nace en los páramos andinos y desciende
													por las laderas orientales hasta llegar al valle de Aburrá.
												</p>
											</div>
											<div class="mt-6 space-y-4">
												<div class="flex flex-wrap gap-4 text-white/80">
													<span class="text-sm">• Ecosistema de páramo</span>
													<span class="text-sm">• Corredor biológico</span>
													<span class="text-sm">• Recurso hídrico vital</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-[#1b7895]/80 to-[#2a97b8]/80 p-6 rounded-xl backdrop-blur-md shadow-xl border border-white/10">
							<p class="text-lg text-white leading-relaxed">
							La Quebrada Santa Elena serpentea desde los páramos andinos hasta el corazón de Medellín,
							llevando consigo la vida y la historia de los ecosistemas de alta montaña.
							Esta quebrada es testigo de la biodiversidad única de la región y ha sido fuente de vida
							para las comunidades que han habitado su cuenca durante generaciones.
						</p>
					</div>
				</section>

				<section id="santa-2" class="min-h-screen flex items-center justify-center py-16">
					<div class="max-w-6xl mx-auto px-4">
						<h2 class="text-5xl font-bold text-white mb-12 text-shadow-lg text-center">
							<span class="bg-gradient-to-r from-[#1b7895] to-[#2a97b8] text-transparent bg-clip-text">
								Santa 2
							</span>
						</h2>
						
						<div class="grid gap-8 mb-12">
							<div class="bg-gradient-to-br from-[#1b7895]/90 to-[#2a97b8]/90 rounded-xl p-1 cursor-pointer hover:scale-105 transition-transform duration-300" onclick="window.location.href='/quebrada-santaelena/origen'">
								<div class="bg-gradient-to-b from-white/10 to-white/5 rounded-lg backdrop-blur-md p-8 border border-white/20 hover:border-white/40 transition-all duration-500">
									<div class="flex flex-col md:flex-row gap-8">
										<div class="w-full md:w-1/2">
											<div class="h-64 rounded-lg overflow-hidden glass-container relative">
												<div class="absolute inset-0 bg-gradient-to-t from-[#1b7895]/20 to-transparent"></div>
												<img src="/quebrada-santaelena-preview.jpg" alt="Origen Quebrada Santa Elena" class="w-full h-full object-cover hover:scale-110 transition-transform duration-700" />
											</div>
										</div>
										<div class="w-full md:w-1/2 flex flex-col justify-between">
											<div class="space-y-6">
												<h3 class="text-2xl font-semibold text-white">Nacimiento en las Alturas</h3>
												<p class="text-lg text-white/90 leading-relaxed">
													En las alturas de la cordillera, donde los vientos andinos moldean el paisaje
													y la vegetación de páramo abraza las alturas, nacen las aguas de la Quebrada Santa Elena.
												</p>
											</div>
											<div class="mt-6 space-y-4">
												<div class="flex flex-wrap gap-4 text-white/80">
													<span class="text-sm">• Ecosistema de páramo</span>
													<span class="text-sm">• Filtración natural</span>
													<span class="text-sm">• Aguas cristalinas</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-[#1b7895]/80 to-[#2a97b8]/80 p-6 rounded-xl backdrop-blur-md shadow-xl border border-white/10">
							<p class="text-lg text-white leading-relaxed">
							En las alturas de la cordillera, donde los vientos andinos moldean el paisaje
							y la vegetación de páramo abraza las alturas, nacen las aguas de la Quebrada Santa Elena.
							Los suelos orgánicos ricos en materia vegetal filtran naturalmente las aguas,
							creando un recurso hídrico de excepcional calidad para el valle de Aburrá.
						</p>
					</div>
				</section>
					<section id="santa-3" class="min-h-screen flex items-center justify-center py-16">
					<div class="max-w-6xl mx-auto px-4">
						<h2 class="text-5xl font-bold text-white mb-12 text-shadow-lg text-center">
							<span class="bg-gradient-to-r from-[#1b7895] to-[#2a97b8] text-transparent bg-clip-text">
								santa 3
							</span>
						</h2>
						
						<div class="grid gap-8 mb-12">
							<div class="bg-gradient-to-br from-[#1b7895]/90 to-[#2a97b8]/90 rounded-xl p-1 cursor-pointer hover:scale-105 transition-transform duration-300" onclick="window.location.href='/quebrada-santaelena/conexion-cultural'">
								<div class="bg-gradient-to-b from-white/10 to-white/5 rounded-lg backdrop-blur-md p-8 border border-white/20 hover:border-white/40 transition-all duration-500">
									<div class="flex flex-col md:flex-row gap-8">
										<div class="w-full md:w-1/2">
											<div class="h-64 rounded-lg overflow-hidden glass-container relative">
												<div class="absolute inset-0 bg-gradient-to-t from-[#1b7895]/20 to-transparent"></div>
												<img src="/quebrada-santaelena-preview.jpg" alt="Conexión Cultural Quebrada Santa Elena" class="w-full h-full object-cover hover:scale-110 transition-transform duration-700" />
											</div>
										</div>
										<div class="w-full md:w-1/2 flex flex-col justify-between">
											<div class="space-y-6">
												<h3 class="text-2xl font-semibold text-white">Historia y Tradición</h3>
												<p class="text-lg text-white/90 leading-relaxed">
													Para las comunidades que habitan su cuenca, la Quebrada Santa Elena representa mucho más que agua;
													es una fuente de inspiración, leyendas y tradiciones que se transmiten de generación en generación.
												</p>
											</div>
											<div class="mt-6 space-y-4">
												<div class="flex items-center space-x-4 text-white/80">
													<span class="text-sm">• Rituales ancestrales</span>
													<span class="text-sm">• Saberes tradicionales</span>
													<span class="text-sm">• Prácticas culturales</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-[#1b7895]/80 to-[#2a97b8]/80 p-6 rounded-xl backdrop-blur-md shadow-xl border border-white/10">
							<p class="text-lg text-white leading-relaxed">
							Para las comunidades que habitan su cuenca, la Quebrada Santa Elena representa mucho más que agua;
							es una fuente de inspiración, leyendas y tradiciones que se transmiten de generación en generación.
							Sus aguas cristalinas han sido testigo de historias y celebraciones que forman parte del patrimonio cultural.
						</p>
					</div>
				</section>

				<section id="santa-4" class="min-h-screen flex items-center justify-center py-16">
					<div class="max-w-6xl mx-auto px-4">
						<h2 class="text-5xl font-bold text-white mb-12 text-shadow-lg text-center">
							<span class="bg-gradient-to-r from-[#1b7895] to-[#2a97b8] text-transparent bg-clip-text">
								santa 4 
							</span>
						</h2>
						
						<div class="grid gap-8 mb-12">
							<div class="bg-gradient-to-br from-[#1b7895]/90 to-[#2a97b8]/90 rounded-xl p-1 cursor-pointer hover:scale-105 transition-transform duration-300" onclick="window.location.href='/quebrada-santaelena/desafios'">
								<div class="bg-gradient-to-b from-white/10 to-white/5 rounded-lg backdrop-blur-md p-8 border border-white/20 hover:border-white/40 transition-all duration-500">
									<div class="flex flex-col md:flex-row gap-8">
										<div class="w-full md:w-1/2">
											<div class="h-64 rounded-lg overflow-hidden glass-container relative">
												<div class="absolute inset-0 bg-gradient-to-t from-[#1b7895]/20 to-transparent"></div>
												<div class="h-full w-full bg-gradient-to-br from-[#1b7895]/40 to-[#2a97b8]/40 backdrop-blur-sm">
													<div class="h-full w-full flex items-center justify-center">
														<div class="text-white text-opacity-80 space-y-4">
															<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
																<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
															</svg>
															<p class="text-lg font-medium">Protección Activa</p>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="w-full md:w-1/2 flex flex-col justify-between">
											<div class="space-y-6">
												<h3 class="text-2xl font-semibold text-white">Protegiendo Nuestra Quebrada</h3>
												<p class="text-lg text-white/90 leading-relaxed">
													La Quebrada Santa Elena enfrenta desafíos por el crecimiento urbano
													y los efectos del cambio climático en su cuenca de alta montaña.
												</p>
											</div>
											<div class="mt-6 space-y-4">
												<div class="flex flex-wrap gap-4 text-white/80">
													<span class="text-sm">• Resiliencia climática</span>
													<span class="text-sm">• Gestión participativa</span>
													<span class="text-sm">• Soluciones naturales</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-[#1b7895]/80 to-[#2a97b8]/80 p-6 rounded-xl backdrop-blur-md shadow-xl border border-white/10">
							<p class="text-lg text-white leading-relaxed">
							La Quebrada Santa Elena enfrenta desafíos contemporáneos por el crecimiento urbano
							y los efectos del cambio climático. Sin embargo, la comunidad y las autoridades
							han desarrollado estrategias innovadoras de adaptación y resiliencia territorial.
						</p>
					</div>
				</section>

			
			</div>
		</div>
	</main>
	
	<WaterSectionTransition client:load />

	<script>
		let currentSection = '';
		let isTransitioning = false;

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting && entry.intersectionRatio > 0.5) {
					const newSection = entry.target.id;
					if (currentSection !== newSection) {
						currentSection = newSection;
						triggerTransition();
					}
				}
			});
		}, {
			threshold: 0.5
		});

		// Observar todas las secciones
		document.querySelectorAll('section[id]').forEach(section => {
			observer.observe(section);
		});

		function triggerTransition() {
			if (isTransitioning) return;
			
			const transitionComponent = document.querySelector('[data-water-transition]');
			if (transitionComponent) {
				isTransitioning = true;
				transitionComponent.dispatchEvent(new CustomEvent('startTransition'));
				
				// La transición se resetea automáticamente en el componente cuando se completa
				setTimeout(() => {
					isTransitioning = false;
				}, 2000); // Un poco más de tiempo para asegurar que la animación termine
			}
		}
	</script>

	<style>
		@import url("/src/styles/river-flow.css");
		
		/* Asegurar que el contenido principal no se oculte detrás de la navegación */
		.flex-1 {
			margin-left: 280px;
		}

		/* Estilos para mejorar la legibilidad */
		.text-shadow-lg {
			text-shadow: 0 2px 4px rgba(0,0,0,0.3);
		}

		section {
			position: relative;
			overflow: hidden;
		}

		section::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(to bottom, rgba(27,120,149,0.1), rgba(27,120,149,0.2));
			pointer-events: none;
			z-index: -1;
		}

		/* Ajustes para pantallas pequeñas */
		@media (max-width: 1024px) {
			.flex-1 {
				margin-left: 0;
			}
		}

		/* Mejoras adicionales para móvil */
		@media (max-width: 768px) {
			.glass-container {
				height: 200px;
			}
			
			section {
				min-height: auto;
				padding: 2rem 0;
			}
			
			.space-y-6 > * + * {
				margin-top: 1rem;
			}
			
			h2 {
				font-size: 2rem;
				margin-bottom: 2rem;
			}
			
			.max-w-6xl {
				padding: 0 1rem;
			}
		}
	</style>
</Layout>

