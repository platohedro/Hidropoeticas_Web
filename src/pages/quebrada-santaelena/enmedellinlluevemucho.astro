import VerticalRiverNav from "../../components/VerticalRiverNav.jsx";
import ImageGallery from "../../components/ImageGallery.jsx";

const galleryImages = [
	{
		src: "/galeria-enmedellinllueve/1.jpg",
		alt: "En Medellín Llueve Mucho 1",
	},
	{
		src: "/galeria-enmedellinllueve/2.jpg",
		alt: "En Medellín Llueve Mucho 2",
	},
	{
		src: "/galeria-enmedellinllueve/3.jpg",
		alt: "En Medellín Llueve Mucho 3",
	},
	{
		src: "/galeria-enmedellinllueve/4.jpg",
		alt: "En Medellín Llueve Mucho 4",
	},
	{
		src: "/galeria-enmedellinllueve/5.jpg",
		alt: "En Medellín Llueve Mucho 5",
	},
	{
		src: "/galeria-enmedellinllueve/6.jpg",
		alt: "En Medellín Llueve Mucho 6",
	},
	{
		src: "/galeria-enmedellinllueve/7.jpg",
		alt: "En Medellín Llueve Mucho 7",
	},
	{
		src: "/galeria-enmedellinllueve/8.jpg",
		alt: "En Medellín Llueve Mucho 8",
	},
	{
		src: "/galeria-enmedellinllueve/9.jpg",
		alt: "En Medellín Llueve Mucho 9",
	},
];
---

<Layout title="Quebrada Santa Elena - Conexión Cultural - Hidropoeticas">
	<main class="min-h-screen">
		<!-- Header -->
		<header class="py-4 md:py-8 px-4 md:px-8 ml-0 lg:ml-[280px]">
			<nav class="mb-4 md:mb-8 flex gap-4">
				<a
					href="/"
					class="inline-flex items-center gap-2 bg-gradient-to-r from-cyan-600/20 to-blue-600/20 hover:from-cyan-500/30 hover:to-blue-500/30 text-cyan-200 hover:text-white px-4 py-2 rounded-lg border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-300 text-sm md:text-base font-medium backdrop-blur-md shadow-lg hover:shadow-cyan-500/20"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
					</svg>
					Inicio
				</a>
				<a
					href="/quebrada-santaelena"
					class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-600/20 to-pink-600/20 hover:from-purple-500/30 hover:to-pink-500/30 text-purple-200 hover:text-white px-4 py-2 rounded-lg border border-purple-500/30 hover:border-purple-400/50 transition-all duration-300 text-sm md:text-base font-medium backdrop-blur-md shadow-lg hover:shadow-purple-500/20"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
					</svg>
					Quebrada Santa Elena
				</a>
			</nav>
			<div class="text-center">
				<h1
					class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 drop-shadow-lg"
				>
					EN MEDELLÍN LLUEVE MUCHO
				</h1>
				<!-- <p class="text-lg md:text-xl text-white opacity-90 px-4">Vínculos ancestrales y tradiciones comunitarias entorno al agua</p> -->

				<img
					src="/enmedellinllueve.jpg"
					alt="Quebrada Santa Elena"
					class="max-w-4xl mx-auto mt-6 rounded-lg shadow-lg w-full object-cover hover:scale-105 transition-transform duration-700"
				/>
			</div>
		</header>

		<!-- River Navigation -->
		<!-- <VerticalRiverNav
			client:load
			sections={[
				{ id: "herencia-ancestral", text: "Herencia Ancestral" },
				{ id: "saberes-tradicionales", text: "Saberes Tradicionales" },
				{ id: "rituales-sagrados", text: "Rituales Sagrados" },
				{
					id: "expresiones-artisticas",
					text: "Expresiones Artísticas",
				},
				{ id: "preservacion-cultural", text: "Preservación Cultural" },
			]}
		/> -->

		<!-- Content Section -->
		<div class="ml-0 lg:ml-[280px] px-4 md:px-8">
			<section class="max-w-6xl mx-auto space-y-20 py-16">
				<article
					id="herencia-ancestral"
					class="rounded-2xl bg-gradient-to-b from-white/10 to-white/5 border border-white/20 backdrop-blur-md shadow-2xl p-8 space-y-10"
				>
					<p class="text-lg md:text-xl text-white/90 leading-relaxed">
						Un proyecto de exploración poética y práctica sobre el
						agua lluvia. ¿A dónde se va el agua cuando cae sobre
						Medellín? ¿Qué ocurre con ella después de tocar los
						tejados, las montañas, las quebradas? Es una invitación
						a imaginar, jugar y aprovechar el agua que cae del cielo
						antes de que se pierda por los caños, y a pensar que
						cada gota, al golpear, es también fuerza y posibilidad.
						Cuidar el agua, incluso en su caída, es resistir a modelos
						energéticos que siguen afectando nuestros ríos.
					</p>
					<p class="text-lg md:text-xl text-white/90 leading-relaxed">
						El proyecto se desarrolla en dos momentos —Agua de cielo y
						Luz mojada— cada uno compuesto por un acto poético y un
						acto práctico:
					</p>
					<ul class="text-lg text-white/90  space-y-3">
						<li>
							• Agua de cielo reflexiona sobre la cantidad de lluvia
							que recibe la ciudad y las formas de captarla. Incluye
							una ocurrencia performática (acto poético) y un taller
							para retener el agua (acto práctico).
						</li>
						<li>
							• Luz mojada indaga en la lluvia como energía. A través
							de un taller, lxs participantes construyen luces que se
							activan con el agua. Estas luces se encienden y se
							amplifican durante un día de lluvia, generando un acto
							poético que celebra la potencia de lo húmedo.
						</li>
						<li>
							• Además de los artefactos creados en el proceso,
							surgió un fanzine colectivo titulado Orfandad Fluvial:
							un catálogo del Centro Nacional de Memoria de las
							Precipitaciones Perdidas.
						</li>
					</ul>


					<div class="pt-8"> 	<ImageGallery
						client:load
						images={galleryImages}
						title="Galería: En Medellín Llueve Mucho"
						columns={3}
					
					/></div>
				
				</article>

				<article
					id="material-consulta"
					class="grid gap-6 lg:grid-cols-[1.1fr_0.9fr] items-center"
				>
					<div class="rounded-2xl overflow-hidden shadow-2xl">
						<img
							src="/consultamdellueve.jpg"
							alt="Instalación de En Medellín Llueve Mucho"
							class="max-w-sm mx-auto w-auto object-contain max-h-[50vh] transition-transform duration-500 hover:scale-105 rounded-lg"
						/>
						
					</div>
					<div class="bg-gradient-to-b from-white/10 to-white/5 rounded-2xl border border-white/20 p-8 backdrop-blur-md shadow-2xl">
						<h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
							Material de consulta
						</h2>
						<p class="text-white/80 mb-6">
							Recursos que documentan el proceso creativo, las
							instancias de memoria y las piezas sonoras que
							componen En Medellín Llueve Mucho.
						</p>
						<ul class="text-white/90 space-y-3 text-sm md:text-base">
							<li>
								<a
									href="https://drive.google.com/file/d/1qqJDZkyNHrg6sqKzXBzBqz3E3CGtzXRj/view?usp=drive_link"
									target="_blank"
									rel="noreferrer"
									class="text-cyan-200 hover:text-white underline transition-colors"
								>
									Orfandad Pluvial (documento)
								</a>
							</li>
							<li>
								<a
									href="https://drive.google.com/file/d/1Sn41HjA7G9CMSRXjvrna8X0MyTJ0kA85/view?usp=drive_link"
									target="_blank"
									rel="noreferrer"
									class="text-cyan-200 hover:text-white underline transition-colors"
								>
									Cuaderno de ideas: En Medellín Llueve Mucho
								</a>
							</li>
							<li>
								<a
									href="https://platohedro.org/maria-carolina-ardila/"
									target="_blank"
									rel="noreferrer"
									class="text-cyan-200 hover:text-white underline transition-colors"
								>
									Podcast Junxts: En Medellín Llueve Mucho
								</a>
							</li>
						</ul>
					</div>
				</article>
			</section>


			<section>
				<div id="artista" class="rounded-xl p-1">
							<div
								class="bg-gradient-to-b from-white/10 to-white/5 rounded-lg backdrop-blur-md p-8 border border-white/20 hover:border-white/40 transition-all duration-500"
							>
								<div
									class="flex flex-col md:flex-row gap-8 items-center"
								>
									<div class="w-full md:w-1/2">
										<div
											class="h-72 rounded-lg overflow-hidden glass-container relative"
										>
											<div
												class="absolute inset-0 bg-gradient-to-t from-[#f29f05]/30 to-transparent"
											>
											</div>
											<img
												src="/mariartista.png"
												alt="Retrato de Maria Carolina Ardila"
												class="w-full h-full object-cover"
											/>
										</div>
									</div>
									<div class="w-full md:w-1/2 space-y-5">
										<p
											class="uppercase text-sm tracking-[0.3em] text-amber-200"
										>
											Artista invitada
										</p>
										<h2
											class="text-3xl font-semibold text-white drop-shadow-lg"
										>
											María Carolina Ardila
										</h2>
										<p
											class="text-lg text-white/90 leading-relaxed"
										>
											Artista visual, investigadora y
											pedagoga que camina los ríos para
											tejer diálogos entre arte y ciencia.
											En Agüeros del Río de Oro explora
											los presagios del agua a partir de
											archivos familiares, recorridos
											comunitarios y registros
											audiovisuales que cuestionan las
											amenazas sobre la cuenca.
										</p>
										<p
											class="text-lg text-white/80 leading-relaxed"
										>
											Su práctica combina grabación de
											campo, escritura y montaje
											audiovisual. Desde laboratorios,
											archivos y territorios custodiados
											por las comunidades, recopila
											historias, voces y objetos que se
											transforman en experiencias
											inmersivas para defender el río.
										</p>
										<div
											class="flex flex-wrap gap-3 text-white/70 text-sm"
										>
											<a href="https://platohedro.org/maria-carolina-ardila/" target="_blank"
												><span
													class="px-3 py-1 rounded-full border border-white/20 backdrop-blur-sm"
													>Ver Perfil</span
												>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
			</section>
		</div>
	</main>
</Layout>

<style>
	@import url("/src/styles/river-flow.css");

	.glass-container {
		position: relative;
		overflow: hidden;
	}

	/* Mejoras adicionales para móvil */
	@media (max-width: 768px) {
		.glass-container {
			height: 200px;
		}

		section {
			min-height: auto;
			padding: 2rem 0;
		}

		h1 {
			font-size: 2rem;
		}

		h2 {
			font-size: 1.75rem;
			margin-bottom: 1.5rem;
		}
	}
</style>
