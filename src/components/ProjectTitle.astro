<!-- Título y subtítulo - Posicionado más abajo -->
<div class="fixed bottom-16 left-6 z-50">
  <div class="pointer-events-none bg-slate-900/80 backdrop-blur-sm p-4 rounded-xl border border-cyan-500/20 shadow-2xl">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-cyan-300 tracking-wide mb-1" style="font-family: 'Oswald', sans-serif !important; font-weight: 700 !important; letter-spacing: 0.02em !important;">
      <span class="bg-gradient-to-r from-cyan-300 via-blue-400 to-teal-300 bg-clip-text text-transparent">
        HIDROPOETICAS <br>AMBIENTALES
      </span>
    </h1>
    <div class="h-1 w-full bg-gradient-to-r from-cyan-500 via-blue-500 to-teal-500 rounded-full my-2"></div>
    <div class="text-base md:text-lg text-cyan-100 font-medium tracking-wider" style="font-family: 'Roboto Condensed', sans-serif !important;">
      Arte y Ciencia para el Cuidado Común
    </div>
  </div>
</div>

<!-- Botón del Manifiesto - Posicionado arriba a la derecha -->
<a href="/acerca-de" class="fixed top-6 right-6 z-50 bg-cyan-600 hover:bg-cyan-500 text-white font-bold py-3 px-6 rounded-full border-2 border-cyan-400 hover:border-white transition-all duration-300 shadow-lg hover:shadow-cyan-500/50 transform hover:scale-105">
  LEER MANIFIESTO →
</a>
</div>

<style>
  /* Force typography with inline styles */
  h1 {
    text-shadow: 0 0 30px rgba(79, 233, 171, 0.3);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4));
  }
  
  /* Typography overrides */
  h1, h1 * {
    font-family: 'Oswald', sans-serif !important;
    font-weight: 700 !important;
  }
  
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    h1 {
      font-size: 1.75rem;
    }
  }
</style>